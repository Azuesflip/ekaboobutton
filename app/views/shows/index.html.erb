<% provide(:title, "Shows") %>
<p id="notice"><%= notice %></p>

<h1>Shows</h1>

<div class="shows">
  <table>
    <thead>
      <tr>
        <th>City</th>
        <th>State</th>
        <th>Venue</th>
        <th>Date</th>
        <th>Tickets</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @shows.each do |show| %>
        <tr>
          <td><%= show.city %></td>
          <td><%= show.state %></td>
          <td><%= show.venue %></td>
          <td><%= show.date %></td>
          <td><%= 
            if(show.tickets != "")
              link_to 'Tickets', show.tickets, class:'btn btn-primary'
            end 
          %></td>
          <td><%= link_to 'Show', show, class:'btn btn-secondary' %></td>
          <% if logged_in? %>
            <td><%= link_to 'Edit', edit_show_path(show), class:'btn btn-secondary' %></td>
            <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-secondary' %></td>
            <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<% if logged_in? %>
  <%= link_to 'New Show', new_show_path %>
<% end %>
